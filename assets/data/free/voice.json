{
  "category": "语音服务",
  "description": "提供语音识别、语音合成、语音转文字等服务的API接口",
  "version": "1.0.0",
  "last_updated": "2025-01-20",
  "total_apis": 5,
  "apis": [
    {
      "id": "voice-001",
      "name": "Google Speech-to-Text",
      "description": "谷歌语音识别服务，支持120+语言和方言",
      "endpoint": "https://speech.googleapis.com/v1/speech:recognize",
      "method": "POST",
      "parameters": {
        "Authorization": "Bearer {access_token}",
        "config": "识别配置",
        "audio": "音频数据",
        "languageCode": "语言代码"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://cloud.google.com/speech-to-text/docs",
      "website": "https://cloud.google.com/speech-to-text",
      "tags": ["谷歌服务", "多语言", "高精度"]
    },
    {
      "id": "voice-002",
      "name": "Amazon Transcribe",
      "description": "AWS语音转文字服务，支持实时和批量转录",
      "endpoint": "https://transcribe.{region}.amazonaws.com/",
      "method": "POST",
      "parameters": {
        "X-Amz-Target": "Transcribe.StartTranscriptionJob",
        "Content-Type": "application/x-amz-json-1.1",
        "TranscriptionJobName": "任务名称",
        "Media": "媒体文件",
        "LanguageCode": "语言代码"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://docs.aws.amazon.com/transcribe/",
      "website": "https://aws.amazon.com/transcribe/",
      "tags": ["AWS", "实时转录", "批量处理"]
    },
    {
      "id": "voice-003",
      "name": "Microsoft Azure Speech",
      "description": "微软语音服务，提供语音识别和合成功能",
      "endpoint": "https://{region}.stt.speech.microsoft.com/speech/recognition/conversation/cognitiveservices/v1",
      "method": "POST",
      "parameters": {
        "Ocp-Apim-Subscription-Key": "订阅密钥",
        "Content-Type": "audio/wav",
        "Accept": "application/json",
        "audio": "音频数据"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://docs.microsoft.com/en-us/azure/cognitive-services/speech-service/",
      "website": "https://azure.microsoft.com/en-us/services/cognitive-services/speech-services/",
      "tags": ["微软", "语音识别", "语音合成"]
    },
    {
      "id": "voice-004",
      "name": "ElevenLabs",
      "description": "AI语音合成服务，支持声音克隆和情感表达",
      "endpoint": "https://api.elevenlabs.io/v1/text-to-speech/{voice_id}",
      "method": "POST",
      "parameters": {
        "Authorization": "Bearer {api_key}",
        "Content-Type": "application/json",
        "text": "要合成的文本",
        "voice_settings": "声音设置",
        "model_id": "模型ID"
      },
      "response_format": "Audio",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://docs.elevenlabs.io/",
      "website": "https://elevenlabs.io",
      "tags": ["AI合成", "声音克隆", "情感表达"]
    },
    {
      "id": "voice-005",
      "name": "AssemblyAI",
      "description": "专业语音AI平台，提供高级语音分析功能",
      "endpoint": "https://api.assemblyai.com/v2/transcript",
      "method": "POST",
      "parameters": {
        "Authorization": "Bearer {api_key}",
        "Content-Type": "application/json",
        "audio_url": "音频URL",
        "speaker_labels": "说话人标签",
        "sentiment_analysis": "情感分析"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://www.assemblyai.com/docs/",
      "website": "https://www.assemblyai.com",
      "tags": ["专业AI", "说话人识别", "情感分析"]
    }
  ],
  "examples": {
    "transcribe_audio": {
      "description": "转录音频文件",
      "endpoint": "POST https://speech.googleapis.com/v1/speech:recognize",
      "request_body": {
        "config": {
          "encoding": "LINEAR16",
          "sampleRateHertz": 16000,
          "languageCode": "zh-CN"
        },
        "audio": {
          "content": "base64编码的音频数据"
        }
      },
      "response": {
        "results": [
          {
            "alternatives": [
              {
                "transcript": "转录的文本内容",
                "confidence": 0.95
              }
            ]
          }
        ]
      }
    },
    "synthesize_speech": {
      "description": "合成语音",
      "endpoint": "POST https://api.elevenlabs.io/v1/text-to-speech/voice_id",
      "request_body": {
        "text": "要合成的文本内容",
        "voice_settings": {
          "stability": 0.5,
          "similarity_boost": 0.5
        }
      },
      "response": "音频文件数据"
    }
  },
  "sdk_libraries": [
    {
      "language": "Python",
      "package": "google-cloud-speech",
      "install": "pip install google-cloud-speech",
      "usage": "from google.cloud import speech"
    },
    {
      "language": "JavaScript",
      "package": "@google-cloud/speech",
      "install": "npm install @google-cloud/speech",
      "usage": "const speech = require('@google-cloud/speech');"
    }
  ]
}
