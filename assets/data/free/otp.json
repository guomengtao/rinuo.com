{
  "category": "OTP服务",
  "description": "提供一次性密码、双因素认证、短信验证码等安全验证服务的API接口",
  "version": "1.0.0",
  "last_updated": "2025-01-20",
  "total_apis": 5,
  "apis": [
    {
      "id": "otp-001",
      "name": "Twilio Verify",
      "description": "Twilio提供的双因素认证服务，支持短信、语音、邮件验证",
      "endpoint": "https://verify.twilio.com/v2/Services",
      "method": "POST",
      "parameters": {
        "AccountSid": "账户SID",
        "AuthToken": "认证令牌",
        "FriendlyName": "服务名称",
        "CodeLength": "验证码长度",
        "LookupEnabled": "查找功能"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://www.twilio.com/docs/verify",
      "website": "https://www.twilio.com/verify",
      "tags": ["双因素认证", "多通道", "企业级"]
    },
    {
      "id": "otp-002",
      "name": "Authy API",
      "description": "Authy双因素认证服务，支持TOTP和推送通知",
      "endpoint": "https://api.authy.com/protected/json",
      "method": "GET/POST",
      "parameters": {
        "api_key": "API密钥",
        "user_id": "用户ID",
        "country_code": "国家代码",
        "phone_number": "手机号码",
        "via": "发送方式"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://docs.authy.com/",
      "website": "https://authy.com",
      "tags": ["TOTP", "推送通知", "多平台"]
    },
    {
      "id": "otp-003",
      "name": "Google Authenticator",
      "description": "Google开源的双因素认证库，支持TOTP算法",
      "endpoint": "本地库",
      "method": "Python/Java库",
      "parameters": {
        "secret": "密钥",
        "digits": "位数",
        "period": "有效期",
        "algorithm": "算法"
      },
      "response_format": "数字代码",
      "rate_limit": "无限制",
      "is_free": true,
      "documentation": "https://github.com/google/google-authenticator",
      "website": "https://github.com/google/google-authenticator",
      "tags": ["开源", "TOTP", "完全免费"]
    },
    {
      "id": "otp-004",
      "name": "Firebase Authentication",
      "description": "Google Firebase身份认证服务，支持短信验证码",
      "endpoint": "https://identitytoolkit.googleapis.com/v1/accounts",
      "method": "POST",
      "parameters": {
        "phoneNumber": "手机号码",
        "sessionInfo": "会话信息",
        "code": "验证码",
        "apiKey": "API密钥"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": true,
      "documentation": "https://firebase.google.com/docs/auth",
      "website": "https://firebase.google.com",
      "tags": ["Google", "短信验证", "免费套餐"]
    },
    {
      "id": "otp-005",
      "name": "SendGrid OTP",
      "description": "SendGrid邮件服务，支持邮件验证码发送",
      "endpoint": "https://api.sendgrid.com/v3/mail/send",
      "method": "POST",
      "parameters": {
        "Authorization": "Bearer API_KEY",
        "from": "发件人",
        "to": "收件人",
        "subject": "邮件主题",
        "content": "邮件内容"
      },
      "response_format": "JSON",
      "rate_limit": "100封/天(免费)",
      "is_free": true,
      "documentation": "https://sendgrid.com/docs/api-reference/",
      "website": "https://sendgrid.com",
      "tags": ["邮件验证", "免费套餐", "高送达率"]
    }
  ],
  "examples": {
    "send_otp": {
      "description": "发送OTP验证码",
      "endpoint": "POST https://verify.twilio.com/v2/Services/{service_sid}/Verifications",
      "response": {
        "status": "pending",
        "to": "+1234567890",
        "channel": "sms",
        "valid": false,
        "date_created": "2023-01-20T10:00:00Z"
      }
    },
    "verify_otp": {
      "description": "验证OTP代码",
      "endpoint": "POST https://verify.twilio.com/v2/Services/{service_sid}/VerificationCheck",
      "response": {
        "status": "approved",
        "to": "+1234567890",
        "valid": true,
        "date_updated": "2023-01-20T10:05:00Z"
      }
    },
    "generate_totp": {
      "description": "生成TOTP代码",
      "endpoint": "Python库",
      "code": "import pyotp; totp = pyotp.TOTP('secret'); code = totp.now()",
      "response": "123456"
    }
  },
  "sdk_libraries": [
    {
      "language": "Python",
      "package": "twilio",
      "install": "pip install twilio",
      "usage": "from twilio.rest import Client; client = Client(account_sid, auth_token)"
    },
    {
      "language": "Python",
      "package": "pyotp",
      "install": "pip install pyotp",
      "usage": "import pyotp; totp = pyotp.TOTP('secret')"
    },
    {
      "language": "JavaScript",
      "package": "twilio",
      "install": "npm install twilio",
      "usage": "const twilio = require('twilio'); const client = twilio(accountSid, authToken);"
    }
  ]
}
