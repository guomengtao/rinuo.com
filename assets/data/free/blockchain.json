  "examples": {
    "get_balance": {
      "description": "获取以太坊账户余额",
      "endpoint": "POST https://mainnet.infura.io/v3/{project_id}",
      "request_body": {
        "jsonrpc": "2.0",
        "method": "eth_getBalance",
        "params": ["0x742d35Cc6634C0532925a3b8D4C9db96C4b4d8b6", "latest"],
        "id": 1
      },
      "response": {
        "jsonrpc": "2.0",
        "id": 1,
        "result": "0x0"
      }
    },
    "get_crypto_price": {
      "description": "获取加密货币价格",
      "endpoint": "GET https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd",
