{
  "category": "翻译服务",
  "description": "提供多语言翻译、文本翻译等服务的API接口",
  "version": "1.0.0",
  "last_updated": "2025-01-20",
  "total_apis": 4,
  "apis": [
    {
      "id": "translate-001",
      "name": "Google Translate",
      "description": "谷歌翻译服务，支持100多种语言的文本翻译",
      "endpoint": "https://translation.googleapis.com/language/translate/v2",
      "method": "POST",
      "parameters": {
        "Authorization": "Bearer {access_token}",
        "q": "要翻译的文本",
        "target": "目标语言",
        "source": "源语言(可选)",
        "format": "文本格式"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://cloud.google.com/translate/docs",
      "website": "https://cloud.google.com/translate",
      "tags": ["谷歌翻译", "多语言", "高精度"]
    },
    {
      "id": "translate-002",
      "name": "DeepL",
      "description": "基于AI的高质量翻译服务，特别擅长欧洲语言",
      "endpoint": "https://api-free.deepl.com/v2/translate",
      "method": "POST",
      "parameters": {
        "Authorization": "DeepL-Auth-Key {api_key}",
        "text": "要翻译的文本",
        "target_lang": "目标语言",
        "source_lang": "源语言(可选)",
        "preserve_formatting": "保留格式"
      },
      "response_format": "JSON",
      "rate_limit": "500,000字符/月(免费)",
      "is_free": true,
      "documentation": "https://www.deepl.com/docs-api",
      "website": "https://www.deepl.com",
      "tags": ["AI翻译", "高质量", "欧洲语言"]
    },
    {
      "id": "translate-003",
      "name": "Microsoft Translator",
      "description": "微软的翻译服务，支持多种语言和实时翻译",
      "endpoint": "https://api.cognitive.microsofttranslator.com/translate",
      "method": "POST",
      "parameters": {
        "Ocp-Apim-Subscription-Key": "订阅密钥",
        "api-version": "API版本",
        "to": "目标语言",
        "from": "源语言(可选)",
        "textType": "文本类型"
      },
      "response_format": "JSON",
      "rate_limit": "200万字符/月(免费)",
      "is_free": true,
      "documentation": "https://docs.microsoft.com/en-us/azure/cognitive-services/translator/",
      "website": "https://www.microsoft.com/en-us/translator",
      "tags": ["微软", "实时翻译", "免费套餐"]
    },
    {
      "id": "translate-004",
      "name": "LibreTranslate",
      "description": "开源的翻译服务，支持离线翻译和自托管部署",
      "endpoint": "https://libretranslate.com/translate",
      "method": "POST",
      "parameters": {
        "q": "要翻译的文本",
        "source": "源语言",
        "target": "目标语言",
        "format": "文本格式",
        "api_key": "API密钥(可选)"
      },
      "response_format": "JSON",
      "rate_limit": "无限制",
      "is_free": true,
      "documentation": "https://libretranslate.com/docs/",
      "website": "https://libretranslate.com",
      "tags": ["开源", "离线翻译", "自托管"]
    }
  ],
  "examples": {
    "translate_text": {
      "description": "翻译文本",
      "endpoint": "POST https://translation.googleapis.com/language/translate/v2",
      "request_body": {
        "q": "Hello, how are you?",
        "target": "zh",
        "source": "en"
      },
      "response": {
        "data": {
          "translations": [
            {
              "translatedText": "你好，你好吗？",
              "detectedSourceLanguage": "en"
            }
          ]
        }
      }
    },
    "batch_translate": {
      "description": "批量翻译",
      "endpoint": "POST https://api-free.deepl.com/v2/translate",
      "request_body": {
        "text": ["Hello", "World"],
        "target_lang": "DE"
      },
      "response": {
        "translations": [
          {"text": "Hallo", "detected_source_language": "EN"},
          {"text": "Welt", "detected_source_language": "EN"}
        ]
      }
    }
  },
  "sdk_libraries": [
    {
      "language": "JavaScript",
      "package": "@google-cloud/translate",
      "install": "npm install @google-cloud/translate",
      "usage": "const {Translate} = require('@google-cloud/translate').v2;"
    },
    {
      "language": "Python",
      "package": "googletrans",
      "install": "pip install googletrans==4.0.0rc1",
      "usage": "from googletrans import Translator"
    },
    {
      "language": "Python",
      "package": "deepl",
      "install": "pip install --upgrade deepltr",
      "usage": "import deepltr"
    }
  ]
}
