      "method": "GET",
      "parameters": {
        "X-API-KEY": "API密钥",
        "asset_contract_address": "合约地址",
        "token_ids": "代币ID",
        "order_direction": "排序方向",
        "offset": "偏移量"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://docs.opensea.io/reference/api-overview",
      "website": "https://opensea.io",
      "tags": ["NFT市场", "全球最大", "完整API"]
    },
    {
