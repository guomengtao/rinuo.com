  "examples": {
    "get_nft_metadata": {
      "description": "获取NFT元数据",
      "endpoint": "GET https://api.opensea.io/api/v1/asset/{contract_address}/{token_id}/",
      "response": {
        "id": 123456,
        "name": "NFT Name",
        "description": "NFT Description",
        "image_url": "https://example.com/image.png",
        "traits": [
          {
            "trait_type": "Background",
            "value": "Blue"
          }
        ]
      }
    },
    "upload_to_ipfs": {
      "description": "上传文件到IPFS",
      "endpoint": "POST https://api.pinata.cloud/pinning/pinFileToIPFS",
      "response": {
        "IpfsHash": "QmHash123",
        "PinSize": 12345,
        "Timestamp": "2023-01-20T10:00:00.000Z"
      }
    }
  },
