{
  "category": "短信服务",
  "description": "提供短信发送、短信验证、短信营销等服务的API接口",
  "version": "1.0.0",
  "last_updated": "2025-01-20",
  "total_apis": 5,
  "apis": [
    {
      "id": "sms-001",
      "name": "Twilio",
      "description": "全球领先的通信API平台，支持短信、语音、视频等多种服务",
      "endpoint": "https://api.twilio.com/2010-04-01/Accounts/{AccountSid}/Messages.json",
      "method": "POST",
      "parameters": {
        "Authorization": "Basic {auth_token}",
        "From": "发件人号码",
        "To": "收件人号码",
        "Body": "短信内容",
        "MediaUrl": "媒体URL(可选)"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://www.twilio.com/docs/sms/api",
      "website": "https://www.twilio.com",
      "tags": ["全球服务", "多种通信", "可靠平台"]
    },
    {
      "id": "sms-002",
      "name": "Vonage (Nexmo)",
      "description": "提供短信、语音、验证码等通信服务的API平台",
      "endpoint": "https://rest.nexmo.com/sms/json",
      "method": "POST",
      "parameters": {
        "api_key": "API密钥",
        "api_secret": "API密钥",
        "from": "发件人",
        "to": "收件人",
        "text": "短信内容",
        "type": "短信类型"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://developer.nexmo.com/api/sms",
      "website": "https://www.vonage.com",
      "tags": ["验证码", "语音服务", "全球覆盖"]
    },
    {
      "id": "sms-003",
      "name": "MessageBird",
      "description": "欧洲领先的通信平台，提供短信、语音、聊天等API服务",
      "endpoint": "https://rest.messagebird.com/messages",
      "method": "POST",
      "parameters": {
        "Authorization": "AccessKey {access_key}",
        "originator": "发件人",
        "recipients": "收件人数组",
        "body": "短信内容",
        "reference": "参考号"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://developers.messagebird.com/",
