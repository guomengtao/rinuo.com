      "tags": ["欧洲服务", "多种通信", "API友好"]
    },
    {
      "id": "sms-004",
      "name": "Plivo",
      "description": "云通信平台，提供短信、语音、视频等API服务",
      "endpoint": "https://api.plivo.com/v1/Account/{auth_id}/Message/",
      "method": "POST",
      "parameters": {
        "Authorization": "Basic {auth_token}",
        "src": "发件人号码",
        "dst": "收件人号码",
        "text": "短信内容",
        "type": "短信类型"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://www.plivo.com/docs/",
      "website": "https://www.plivo.com",
      "tags": ["云通信", "多种服务", "开发者友好"]
    },
    {
      "id": "sms-005",
      "name": "AWS SNS",
      "description": "亚马逊的简单通知服务，支持短信、邮件、推送通知等",
      "endpoint": "https://sns.{region}.amazonaws.com/",
      "method": "POST",
      "parameters": {
        "Action": "Publish",
        "Message": "消息内容",
        "PhoneNumber": "手机号码",
        "MessageAttributes": "消息属性"
      },
      "response_format": "XML",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://docs.aws.amazon.com/sns/",
      "website": "https://aws.amazon.com/sns/",
      "tags": ["亚马逊", "多种通知", "高扩展性"]
    }
  ],
  "examples": {
    "send_sms": {
      "description": "发送短信",
      "endpoint": "POST https://api.twilio.com/2010-04-01/Accounts/{AccountSid}/Messages.json",
      "request_body": {
        "From": "+1234567890",
        "To": "+0987654321",
        "Body": "您的验证码是123456，5分钟内有效"
      },
      "response": {
        "sid": "SM1234567890",
        "status": "queued",
        "direction": "outbound-api"
      }
    },
    "verify_code": {
      "description": "发送验证码",
      "endpoint": "POST https://rest.nexmo.com/sms/json",
      "request_body": {
        "api_key": "your_api_key",
        "api_secret": "your_api_secret",
        "from": "Vonage",
        "to": "1234567890",
        "text": "您的验证码是654321"
      },
      "response": {
        "message-count": "1",
        "messages": [{"status": "0"}]
      }
    }
  },
  "sdk_libraries": [
