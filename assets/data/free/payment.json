{
  "category": "支付服务",
  "description": "提供在线支付、数字货币、支付网关等服务的API接口",
  "version": "1.0.0",
  "last_updated": "2025-01-20",
  "total_apis": 8,
  "apis": [
    {
      "id": "payment-001",
      "name": "Stripe",
      "description": "全球领先的在线支付处理平台，支持信用卡、数字钱包等多种支付方式",
      "endpoint": "https://api.stripe.com/v1/payment_intents",
      "method": "POST",
      "parameters": {
        "Authorization": "Bearer {secret_key}",
        "amount": "支付金额(分)",
        "currency": "货币代码",
        "payment_method_types": "支付方式数组",
        "description": "支付描述"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://stripe.com/docs/api",
      "website": "https://stripe.com",
      "tags": ["在线支付", "信用卡", "全球支付"]
    },
    {
      "id": "payment-002",
      "name": "PayPal",
      "description": "全球最大的在线支付服务之一，支持个人和企业账户",
      "endpoint": "https://api-m.paypal.com/v1/payments/payment",
      "method": "POST",
      "parameters": {
        "Authorization": "Bearer {access_token}",
        "intent": "支付意图",
        "payer": "付款人信息",
        "transactions": "交易详情",
        "redirect_urls": "重定向URL"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://developer.paypal.com/docs/api/",
      "website": "https://www.paypal.com",
      "tags": ["PayPal", "在线支付", "全球服务"]
    }
  ],
  "examples": {
    "create_payment": {
      "description": "创建支付意图",
      "endpoint": "POST https://api.stripe.com/v1/payment_intents",
      "request_body": {
        "amount": 2000,
        "currency": "usd",
        "payment_method_types": ["card"],
        "description": "测试支付"
      },
      "response": {
        "id": "pi_1234567890",
        "amount": 2000,
        "currency": "usd",
        "status": "requires_payment_method"
      }
    }
  },
  "sdk_libraries": [
    {
      "language": "JavaScript",
      "package": "stripe",
      "install": "npm install stripe",
      "usage": "const stripe = require('stripe')('sk_test_...');"
    },
    {
      "language": "Python",
      "package": "stripe",
      "install": "pip install stripe",
      "usage": "import stripe; stripe.api_key = 'sk_test_...'"
    }
  ]
}
