  "total_apis": 5,
  "apis": [
    {
      "id": "fonts-001",
      "name": "Google Fonts",
      "description": "谷歌免费字体服务，提供1000+高质量字体",
      "endpoint": "https://fonts.googleapis.com/css2",
      "method": "GET",
      "parameters": {
        "family": "字体名称",
        "display": "显示方式",
        "text": "预览文本",
        "subset": "字符子集"
      },
      "response_format": "CSS",
      "rate_limit": "无限制",
      "is_free": true,
      "documentation": "https://developers.google.com/fonts/docs/css2",
      "website": "https://fonts.google.com",
      "tags": ["谷歌服务", "免费字体", "高质量"]
    },
    {
      "id": "fonts-002",
      "name": "Adobe Fonts",
      "description": "Adobe专业字体服务，提供数千种商业字体",
      "endpoint": "https://typekit.com/api/v1/json/kits/{kit_id}",
      "method": "GET",
      "parameters": {
        "Authorization": "Bearer {access_token}",
        "kit_id": "字体包ID",
        "domains": "域名列表"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://helpx.adobe.com/fonts/using/embed-codes.html",
      "website": "https://fonts.adobe.com",
      "tags": ["Adobe", "专业字体", "商业授权"]
    },
    {
      "id": "fonts-003",
      "name": "Font Awesome",
      "description": "图标字体服务，提供丰富的图标字体",
      "endpoint": "https://fontawesome.com/api/icons",
      "method": "GET",
      "parameters": {
        "query": "搜索查询",
        "categories": "图标分类",
        "styles": "图标样式",
        "limit": "结果数量"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": true,
      "documentation": "https://fontawesome.com/docs/apis",
      "website": "https://fontawesome.com",
      "tags": ["图标字体", "丰富图标", "免费使用"]
    },
    {
      "id": "fonts-004",
      "name": "Fonts.com",
      "description": "专业字体服务提供商，提供各种字体解决方案",
      "endpoint": "https://api.fonts.com/v1/fonts",
      "method": "GET",
      "parameters": {
        "api_key": "API密钥",
        "search": "搜索关键词",
        "category": "字体分类",
        "style": "字体样式"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://www.fonts.com/web-fonts/api",
      "website": "https://www.fonts.com",
      "tags": ["专业服务", "字体解决方案", "商业授权"]
    },
    {
      "id": "fonts-005",
      "name": "Font Squirrel",
      "description": "免费字体资源平台，提供免费商业字体",
      "endpoint": "https://www.fontsquirrel.com/api/fonts",
      "method": "GET",
      "parameters": {
        "search": "搜索关键词",
        "category": "字体分类",
        "license": "授权类型",
        "format": "字体格式"
      },
      "response_format": "JSON",
      "rate_limit": "无限制",
      "is_free": true,
      "documentation": "https://www.fontsquirrel.com/",
      "website": "https://www.fontsquirrel.com",
      "tags": ["免费字体", "商业授权", "开源友好"]
    }
  ],
  "examples": {
    "load_google_font": {
      "description": "加载Google字体",
      "endpoint": "GET https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap",
      "response": "CSS文件内容"
    },
    "search_fonts": {
      "description": "搜索字体",
      "endpoint": "GET https://www.fontsquirrel.com/api/fonts?search=serif",
      "response": {
        "fonts": [
          {
            "name": "Font Name",
            "category": "serif",
            "license": "free",
            "download_url": "https://example.com/font.woff2"
          }
        ]
      }
    }
  },
  "sdk_libraries": [
