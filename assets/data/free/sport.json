  "apis": [
    {
      "id": "sport-001",
      "name": "ESPN API",
      "description": "ESPN体育数据API，提供全面的体育赛事信息",
      "endpoint": "https://site.api.espn.com/apis/site/v2/sports/{sport}/scoreboard",
      "method": "GET",
      "parameters": {
        "dates": "日期",
        "limit": "数量限制",
        "groups": "分组",
        "seasontype": "赛季类型"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://www.espn.com/apis/devcenter/",
      "website": "https://www.espn.com",
      "tags": ["ESPN", "全面数据", "体育赛事"]
    },
    {
      "id": "sport-002",
      "name": "API-Football",
      "description": "专业足球数据API，覆盖全球足球联赛",
      "endpoint": "https://v3.football.api-sports.io/{endpoint}",
      "method": "GET",
      "parameters": {
        "x-rapidapi-host": "api-sports.io",
        "x-rapidapi-key": "API密钥",
        "league": "联赛ID",
        "season": "赛季",
        "team": "球队ID"
      },
      "response_format": "JSON",
      "rate_limit": "100次/天(免费)",
      "is_free": true,
      "documentation": "https://www.api-football.com/documentation",
      "website": "https://www.api-football.com",
      "tags": ["足球数据", "全球联赛", "免费套餐"]
    },
    {
      "id": "sport-003",
      "name": "The Odds API",
      "description": "体育博彩赔率API，提供实时赔率数据",
      "endpoint": "https://api.the-odds-api.com/v4/sports",
      "method": "GET",
      "parameters": {
        "apiKey": "API密钥",
        "sport": "体育项目",
        "regions": "地区",
        "markets": "市场类型"
      },
      "response_format": "JSON",
      "rate_limit": "500次/月(免费)",
      "is_free": true,
      "documentation": "https://the-odds-api.com/docs/",
      "website": "https://the-odds-api.com",
      "tags": ["赔率数据", "实时更新", "免费套餐"]
    },
    {
      "id": "sport-004",
      "name": "Sportradar",
      "description": "专业体育数据提供商，提供高质量统计数据",
      "endpoint": "https://api.sportradar.us/{sport}/trial/v8/en/{endpoint}",
      "method": "GET",
      "parameters": {
        "api_key": "API密钥",
        "format": "响应格式",
        "language": "语言",
        "version": "版本"
      },
      "response_format": "JSON/XML",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://www.sportradar.com/developers/",
      "website": "https://www.sportradar.com",
      "tags": ["专业数据", "高质量", "企业级"]
    },
    {
      "id": "sport-005",
      "name": "LiveScore API",
      "description": "实时比分服务，提供全球体育赛事实时数据",
      "endpoint": "https://api.livescore.com/v1/api/app/{endpoint}",
      "method": "GET",
      "parameters": {
        "key": "API密钥",
        "secret": "密钥",
        "t": "时间戳",
        "s": "体育项目"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://livescore-api.com/",
      "website": "https://www.livescore.com",
      "tags": ["实时比分", "全球覆盖", "多体育项目"]
    }
  ],
  "examples": {
    "get_scores": {
      "description": "获取足球比分",
      "endpoint": "GET https://v3.football.api-sports.io/fixtures?league=39&season=2023",
      "response": {
        "response": [
          {
            "fixture": {
              "id": 12345,
              "date": "2023-01-20T15:00:00+00:00",
              "status": {"short": "FT"}
            },
            "teams": {
              "home": {"name": "Team A"},
              "away": {"name": "Team B"}
            },
            "goals": {
              "home": 2,
              "away": 1
            }
          }
        ]
      }
    },
    "get_odds": {
      "description": "获取赔率数据",
      "endpoint": "GET https://api.the-odds-api.com/v4/sports/soccer_epl/odds?apiKey=YOUR_KEY",
      "response": {
        "id": "soccer_epl",
        "sport_key": "soccer",
        "sport_title": "Soccer",
        "commence_time": "2023-01-20T15:00:00Z"
      }
    }
  },
