    },
    {
      "language": "Python",
      "package": "pyowm",
      "install": "pip install pyowm",
      "usage": "from pyowm import OWM"
    },
    {
      "language": "Java",
      "package": "org.openweathermap.api",
      "install": "Maven dependency",
      "usage": "import org.openweathermap.api.WeatherApi;"
    }
  ]
}

