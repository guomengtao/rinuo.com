{
  "category": "天气服务",
  "description": "提供全球天气信息查询、天气预报、空气质量等服务的API接口",
  "version": "1.0.0",
  "last_updated": "2025-01-20",
  "total_apis": 8,
  "apis": [
    {
      "id": "weather-001",
      "name": "OpenWeatherMap",
      "description": "全球天气数据服务，提供实时天气、5天预报、历史天气数据",
      "endpoint": "https://api.openweathermap.org/data/2.5/weather",
      "method": "GET",
      "parameters": {
        "q": "城市名称或坐标",
        "appid": "API密钥",
        "units": "温度单位(metric/imperial)",
        "lang": "语言代码"
      },
      "response_format": "JSON",
      "rate_limit": "1000次/天",
      "is_free": true,
      "documentation": "https://openweathermap.org/api",
      "tags": ["天气", "预报", "实时数据"]
    },
    {
      "id": "weather-002",
      "name": "WeatherAPI",
      "description": "专业天气API服务，支持历史天气、海洋天气、天文数据",
      "endpoint": "https://api.weatherapi.com/v1/current.json",
      "method": "GET",
      "parameters": {
        "key": "API密钥",
        "q": "城市名称或坐标",
        "aqi": "空气质量指数",
        "alerts": "天气预警"
      },
      "response_format": "JSON",
      "rate_limit": "100万次/月",
      "is_free": true,
      "documentation": "https://www.weatherapi.com/docs/",
      "tags": ["天气", "空气质量", "预警"]
    },
    {
      "id": "weather-003",
      "name": "AccuWeather",
      "description": "高精度天气预报服务，提供分钟级降水预报",
      "endpoint": "https://dataservice.accuweather.com/currentconditions/v1/{locationKey}",
      "method": "GET",
      "parameters": {
        "apikey": "API密钥",
        "details": "详细信息",
        "metric": "公制单位"
      },
      "response_format": "JSON",
      "rate_limit": "50次/天",
      "is_free": true,
      "documentation": "https://developer.accuweather.com/",
      "tags": ["高精度", "降水预报", "分钟级"]
    },
    {
      "id": "weather-004",
      "name": "Tomorrow.io",
      "description": "AI驱动的天气预报服务，提供超长期天气预报",
      "endpoint": "https://api.tomorrow.io/v4/weather/forecast",
      "method": "GET",
      "parameters": {
        "apikey": "API密钥",
        "location": "位置坐标",
        "timesteps": "时间步长",
        "units": "单位制"
      },
      "response_format": "JSON",
      "rate_limit": "500次/天",
      "is_free": true,
      "documentation": "https://docs.tomorrow.io/",
      "tags": ["AI驱动", "长期预报", "高精度"]
    },
    {
      "id": "weather-005",
      "name": "Visual Crossing",
      "description": "历史天气数据服务，支持全球任意位置的历史天气查询",
      "endpoint": "https://weather.visualcrossing.com/VisualCrossingWebServices/rest/services/timeline",
      "method": "GET",
      "parameters": {
        "key": "API密钥",
        "location": "位置",
        "startDateTime": "开始日期",
        "endDateTime": "结束日期"
      },
      "response_format": "JSON",
      "rate_limit": "1000次/天",
      "is_free": true,
      "documentation": "https://www.visualcrossing.com/weather-api",
      "tags": ["历史数据", "全球覆盖", "CSV导出"]
    },
    {
      "id": "weather-006",
      "name": "Open-Meteo",
      "description": "完全免费的天气API，无需注册，提供高精度天气数据",
      "endpoint": "https://api.open-meteo.com/v1/forecast",
      "method": "GET",
      "parameters": {
        "latitude": "纬度",
        "longitude": "经度",
        "hourly": "小时数据",
        "daily": "日数据"
      },
      "response_format": "JSON",
      "rate_limit": "无限制",
      "is_free": true,
      "documentation": "https://open-meteo.com/en/docs",
      "tags": ["完全免费", "无需注册", "高精度"]
    },
    {
      "id": "weather-007",
      "name": "Meteomatics",
      "description": "专业气象数据服务，提供海洋、航空等专业天气数据",
      "endpoint": "https://api.meteomatics.com/{datetime}/{parameters}/{coords}/{format}",
      "method": "GET",
      "parameters": {
        "username": "用户名",
        "password": "密码",
        "datetime": "时间",
        "parameters": "参数",
        "coords": "坐标"
      },
      "response_format": "JSON/CSV",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://docs.meteomatics.com/",
      "tags": ["专业气象", "海洋数据", "航空数据"]
    },
    {
      "id": "weather-008",
      "name": "ClimaCell",
      "description": "微气候天气服务，提供街道级别的精确天气数据",
      "endpoint": "https://api.climacell.co/v4/weather/forecast/hourly",
      "method": "GET",
      "parameters": {
        "apikey": "API密钥",
        "lat": "纬度",
        "lon": "经度",
        "unit_system": "单位制"
      },
      "response_format": "JSON",
      "rate_limit": "1000次/天",
      "is_free": true,
      "documentation": "https://developer.climacell.co/",
      "tags": ["微气候", "街道级", "高精度"]
    }
  ],
  "examples": {
    "current_weather": {
      "description": "获取当前天气",
      "endpoint": "https://api.openweathermap.org/data/2.5/weather?q=Beijing&appid=YOUR_API_KEY&units=metric",
      "response": {
        "weather": [{"main": "Clear", "description": "clear sky"}],
        "main": {"temp": 22.5, "humidity": 45},
        "wind": {"speed": 3.2}
      }
    },
    "forecast": {
      "description": "获取5天天气预报",
      "endpoint": "https://api.openweathermap.org/data/2.5/forecast?q=Beijing&appid=YOUR_API_KEY",
      "response": {
        "list": [
          {
            "dt": 1640995200,
            "main": {"temp": 20.5},
            "weather": [{"main": "Clouds"}]
          }
        ]
      }
    }
  },
  "sdk_libraries": [
    {
      "language": "JavaScript",
      "package": "openweathermap-api",
