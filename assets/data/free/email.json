    {
      "id": "email-006",
      "name": "Amazon SES",
      "description": "亚马逊的邮件发送服务，成本低廉且可扩展性强",
      "endpoint": "https://email.{region}.amazonaws.com/",
      "method": "POST",
      "parameters": {
        "Action": "SendEmail",
        "Source": "发件人",
        "Destination.ToAddresses.member.1": "收件人",
        "Message.Subject.Data": "主题",
        "Message.Body.Text.Data": "文本内容"
      },
      "response_format": "XML",
      "rate_limit": "200封/天(免费)",
      "is_free": true,
      "documentation": "https://docs.aws.amazon.com/ses/",
      "website": "https://aws.amazon.com/ses/",
      "tags": ["亚马逊", "低成本", "高扩展性"]
    }
  ],
  "examples": {
    "send_email": {
      "description": "发送邮件",
      "endpoint": "POST https://api.sendgrid.com/v3/mail/send",
      "request_body": {
        "from": {"email": "sender@example.com", "name": "发件人"},
        "to": [{"email": "recipient@example.com", "name": "收件人"}],
        "subject": "测试邮件",
        "content": [{"type": "text/plain", "value": "这是一封测试邮件"}]
      },
      "response": {
        "message": "success"
      }
    },
    "verify_email": {
      "description": "验证邮件地址",
      "endpoint": "POST https://api.mailgun.net/v3/{domain}/messages",
      "request_body": {
        "from": "noreply@example.com",
        "to": "user@example.com",
        "subject": "验证您的邮箱",
        "html": "<h1>请点击链接验证邮箱</h1>"
      },
      "response": {
        "id": "<20250120123456.12345.67890@example.com>",
        "message": "Queued. Thank you."
      }
    }
  },
