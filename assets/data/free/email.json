  "apis": [
    {
      "id": "email-001",
      "name": "SendGrid",
      "description": "云邮件服务提供商，提供可靠的邮件发送和营销功能",
      "endpoint": "https://api.sendgrid.com/v3/mail/send",
      "method": "POST",
      "parameters": {
        "Authorization": "Bearer {api_key}",
        "from": "发件人信息",
        "personalizations": "个性化内容",
        "subject": "邮件主题",
        "content": "邮件内容"
      },
      "response_format": "JSON",
      "rate_limit": "100封/天(免费)",
      "is_free": true,
      "documentation": "https://sendgrid.com/docs/api-reference/",
      "website": "https://sendgrid.com",
      "tags": ["邮件发送", "邮件营销", "云服务"]
    },
    {
      "id": "email-002",
      "name": "Mailgun",
      "description": "强大的邮件API服务，支持批量发送和高级功能",
      "endpoint": "https://api.mailgun.net/v3/{domain}/messages",
      "method": "POST",
      "parameters": {
        "Authorization": "Basic {api_key}",
        "from": "发件人",
        "to": "收件人",
        "subject": "主题",
        "text": "纯文本内容",
        "html": "HTML内容"
      },
      "response_format": "JSON",
      "rate_limit": "5000封/月(免费)",
      "is_free": true,
      "documentation": "https://documentation.mailgun.com/",
      "website": "https://www.mailgun.com",
      "tags": ["批量发送", "高级功能", "可靠服务"]
    },
