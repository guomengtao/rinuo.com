{
  "category": "WAF服务",
  "description": "提供Web应用防火墙、安全防护、DDoS防护等服务的API接口",
  "version": "1.0.0",
  "last_updated": "2025-01-20",
  "total_apis": 5,
  "apis": [
    {
      "id": "waf-001",
      "name": "Cloudflare WAF",
      "description": "企业级Web应用防火墙，提供DDoS防护和安全规则",
      "endpoint": "https://api.cloudflare.com/client/v4/zones/{zone_id}/firewall/waf/packages",
      "method": "GET",
      "parameters": {
        "zone_id": "域名区域ID",
        "X-Auth-Key": "API密钥",
        "X-Auth-Email": "邮箱地址"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://developers.cloudflare.com/api/",
      "website": "https://www.cloudflare.com",
      "tags": ["企业级", "DDoS防护", "安全规则"]
    },
    {
      "id": "waf-002",
      "name": "AWS WAF",
      "description": "亚马逊Web应用防火墙，集成AWS生态系统",
      "endpoint": "https://wafv2.{region}.amazonaws.com/",
      "method": "POST",
      "parameters": {
        "Action": "API操作",
        "Version": "API版本",
        "WebACL": "Web ACL配置",
        "Rules": "规则配置"
      },
      "response_format": "JSON",
      "rate_limit": "根据AWS限制",
      "is_free": false,
      "documentation": "https://docs.aws.amazon.com/waf/",
      "website": "https://aws.amazon.com/waf/",
      "tags": ["AWS集成", "云原生", "企业级"]
    },
    {
      "id": "waf-003",
      "name": "Azure Application Gateway WAF",
      "description": "微软Azure应用网关WAF，提供多层安全防护",
      "endpoint": "https://management.azure.com/subscriptions/{subscription_id}/resourceGroups/{resource_group}/providers/Microsoft.Network/applicationGateways/{gateway_name}",
      "method": "PUT",
      "parameters": {
        "api-version": "API版本",
        "properties": "网关属性",
        "sku": "SKU配置",
        "wafPolicy": "WAF策略"
      },
      "response_format": "JSON",
      "rate_limit": "根据Azure限制",
      "is_free": false,
      "documentation": "https://docs.microsoft.com/en-us/azure/web-application-firewall/",
      "website": "https://azure.microsoft.com/en-us/services/web-application-firewall/",
      "tags": ["Azure集成", "多层防护", "企业级"]
    },
    {
      "id": "waf-004",
      "name": "ModSecurity",
      "description": "开源Web应用防火墙，支持Apache和Nginx",
      "endpoint": "本地部署",
      "method": "配置文件",
      "parameters": {
        "SecRuleEngine": "规则引擎",
        "SecRequestBodyAccess": "请求体访问",
        "SecRule": "安全规则",
        "SecResponseBodyAccess": "响应体访问"
      },
      "response_format": "日志文件",
      "rate_limit": "无限制",
      "is_free": true,
      "documentation": "https://github.com/SpiderLabs/ModSecurity/wiki",
      "website": "https://modsecurity.org",
      "tags": ["开源", "本地部署", "完全免费"]
    },
    {
      "id": "waf-005",
      "name": "Fastly WAF",
      "description": "边缘计算WAF，提供实时安全防护",
      "endpoint": "https://api.fastly.com/service/{service_id}/waf/firewall/{firewall_id}",
      "method": "GET",
      "parameters": {
        "service_id": "服务ID",
        "firewall_id": "防火墙ID",
        "Fastly-Key": "API密钥"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://developer.fastly.com/reference/api/",
      "website": "https://www.fastly.com",
      "tags": ["边缘计算", "实时防护", "高性能"]
    }
  ],
  "examples": {
    "get_waf_rules": {
      "description": "获取WAF规则",
      "endpoint": "GET https://api.cloudflare.com/client/v4/zones/{zone_id}/firewall/waf/packages",
      "response": {
        "success": true,
        "result": [
          {
            "id": "rule_package_id",
            "name": "OWASP",
            "description": "OWASP Top 10规则包",
            "status": "active"
          }
        ]
      }
    },
    "create_waf_policy": {
      "description": "创建WAF策略",
      "endpoint": "POST https://management.azure.com/subscriptions/{subscription_id}/resourceGroups/{resource_group}/providers/Microsoft.Network/applicationGateways/{gateway_name}",
      "response": {
        "id": "gateway_id",
        "name": "gateway_name",
        "properties": {
          "wafPolicy": {
            "id": "waf_policy_id"
          }
        }
      }
    }
  },
  "sdk_libraries": [
    {
      "language": "Python",
      "package": "boto3",
      "install": "pip install boto3",
      "usage": "import boto3; waf = boto3.client('wafv2')"
    },
    {
      "language": "JavaScript",
      "package": "aws-sdk",
      "install": "npm install aws-sdk",
      "usage": "const AWS = require('aws-sdk'); const waf = new AWS.WAFV2();"
    }
  ]
}
