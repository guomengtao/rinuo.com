{
  "category": "监控服务",
  "description": "提供网站监控、服务器监控、性能监控等服务的API接口",
  "version": "1.0.0",
  "last_updated": "2025-01-20",
  "total_apis": 5,
  "apis": [
    {
      "id": "monitor-001",
      "name": "UptimeRobot",
      "description": "免费的网站监控服务，支持HTTP、关键词、端口等多种监控类型",
      "endpoint": "https://api.uptimerobot.com/v2/getMonitors",
      "method": "POST",
      "parameters": {
        "api_key": "API密钥",
        "format": "响应格式",
        "monitors": "监控器ID数组",
        "logs": "是否包含日志",
        "response_times": "是否包含响应时间"
      },
      "response_format": "JSON",
      "rate_limit": "1000次/天(免费)",
      "is_free": true,
      "documentation": "https://uptimerobot.com/api/",
      "website": "https://uptimerobot.com",
      "tags": ["网站监控", "免费服务", "多种类型"]
    },
    {
      "id": "monitor-002",
      "name": "Pingdom",
      "description": "专业的网站性能监控服务，提供详细的性能分析和报告",
      "endpoint": "https://api.pingdom.com/api/3.1/checks",
      "method": "GET",
      "parameters": {
        "Authorization": "Basic {auth_token}",
        "include_tags": "包含标签",
        "exclude_tags": "排除标签",
        "status": "状态过滤"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://docs.pingdom.com/",
      "website": "https://www.pingdom.com",
      "tags": ["性能监控", "详细分析", "专业服务"]
    },
    {
      "id": "monitor-003",
      "name": "StatusCake",
      "description": "全面的监控平台，支持网站、服务器、API等多种监控",
      "endpoint": "https://app.statuscake.com/API/Tests/",
      "method": "GET/POST/PUT/DELETE",
      "parameters": {
        "API": "API密钥",
        "Username": "用户名",
        "TestID": "测试ID",
        "TestType": "测试类型",
        "WebsiteName": "网站名称"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": true,
      "documentation": "https://www.statuscake.com/api/",
      "website": "https://www.statuscake.com",
      "tags": ["全面监控", "多种类型", "免费套餐"]
    },
    {
      "id": "monitor-004",
      "name": "New Relic",
      "description": "应用性能监控平台，提供深入的性能分析和错误追踪",
      "endpoint": "https://api.newrelic.com/v2/applications/{application_id}/metrics/data.json",
      "method": "GET",
      "parameters": {
        "X-Api-Key": "API密钥",
        "names[]": "指标名称",
        "values[]": "指标值",
        "from": "开始时间",
        "to": "结束时间"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://docs.newrelic.com/",
      "website": "https://newrelic.com",
      "tags": ["应用监控", "性能分析", "错误追踪"]
    },
    {
      "id": "monitor-005",
      "name": "Datadog",
      "description": "云监控和分析平台，支持基础设施、应用、日志等多种监控",
      "endpoint": "https://api.datadoghq.com/api/v1/series",
      "method": "POST",
      "parameters": {
        "api_key": "API密钥",
        "application_key": "应用密钥",
        "series": "数据系列数组",
        "metric": "指标名称",
        "points": "数据点数组"
      },
      "response_format": "JSON",
      "rate_limit": "根据套餐",
      "is_free": false,
      "documentation": "https://docs.datadoghq.com/api/",
      "website": "https://www.datadoghq.com",
      "tags": ["云监控", "多维度", "数据分析"]
    }
  ],
  "examples": {
    "get_monitors": {
      "description": "获取监控器列表",
      "endpoint": "POST https://api.uptimerobot.com/v2/getMonitors",
      "request_body": {
        "api_key": "your_api_key",
        "format": "json",
        "logs": 1
      },
      "response": {
        "stat": "ok",
        "monitors": [
          {
            "id": 12345,
            "friendly_name": "我的网站",
            "url": "https://example.com",
            "type": 1,
            "status": 2
          }
        ]
      }
    },
    "create_check": {
      "description": "创建新的监控检查",
      "endpoint": "POST https://app.statuscake.com/API/Tests/New",
      "request_body": {
        "API": "your_api_key",
        "WebsiteName": "测试网站",
        "WebsiteURL": "https://example.com",
        "TestType": "HTTP",
        "CheckRate": 300
      },
      "response": {
        "Success": true,
        "InsertID": 12345
      }
    }
  },
